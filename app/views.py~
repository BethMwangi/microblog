
def index():
    user = {'nickname': 'Blossom'}  # fake user
    posts = [  # fake array of posts
        { 
            'author': {'nickname': 'John'}, 
            'body': 'Beautiful day in Nairobi!' 
        },
        { 
            'author': {'nickname': 'Dee'}, 
            'body': 'The Avengers movie was so cool!' 
        }
    ]
    return render_template("index.html",
                           title='Home',
                           user = user,
                           posts = posts)
